{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"newLine": "LF",
		"outDir": "./dist/",
		"target": "es2018",
		"sourceMap": true,
		"declaration": true,
		"jsx": "preserve",
		"strict": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true
	},
	"compileOnSave": true,
	"include": [
		"src/*.ts"
	],
	"exclude": [
		".git",
		".gitignore",
		"node_modules"
	]
}